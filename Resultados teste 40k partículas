#plt.errorbar(x, n_co60_ra_rc_fluxo, yerr=n_co60_ra_rc_fluxo_incerteza, fmt='o-', capsize=2, capthick=2, linewidth=1, markersize=3, label='Fluxo Co-60, Raios Cósmicos e Radiação Ambiental (1.1MeV - 1.47MeV)')

plt.xlabel('Área da Seção Reta do Tarugo')
plt.ylabel('Fluxo')
plt.title('Gráfico de Fluxo vs Área')
plt.grid(True, alpha=0.3)
plt.legend()

# Formatação dos ticks do eixo X
plt.xticks(x)

plt.tight_layout()
plt.show()
