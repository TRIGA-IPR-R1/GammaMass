# Eixo X: de 0 a 625 com passo de 25 (26 pontos)
x = np.arange(0, 650, 25)

# Criar o gráfico
plt.figure(figsize=(10, 8))

plt.errorbar(x, n_co60_fluxo, yerr=n_co60_fluxo_incerteza, fmt='o-', capsize=2, capthick=2, linewidth=1, markersize=3, label='Fluxo Co-60 (1.1MeV - 1.47MeV)')

